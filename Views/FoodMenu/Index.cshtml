@model IEnumerable<FoodFrenzy1.Models.Product>
@{
    ViewData["Title"] = "Food Menu";
}

<h2 class="my-4">Food Menu</h2>

<form asp-action="Index" class="col-2 my-1 p-2">
    <div>
        Filter Search
        <div class="my-1">
            <input type="text" name="searchString" placeholder="Food Name" class="form-control-sm col-12" />
        </div>
        <div class="my-1">
            <input type="number" name="minPrice" step="1" placeholder="$min" class="form-control-sm col-5" />&nbsp;&#8212;&nbsp;<input type="number" name="maxPrice" step="1" placeholder="$max" class="form-control-sm col-5" />
        </div>
        <input type="submit" value="Filter" class="btn btn-primary btn-sm"/>
       <a asp-action="Index" class="btn btn-secondary btn-sm float-right">Clear</a>
    </div>
</form>
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-3">
            <div class="card my-2 store-card">
                <a class="a-cleanup" asp-asp-controller="FoodMenu" asp-action="Details" asp-route-id="@product.id">
                    <img src="@product.ProductPicture" class="card-img-top card-img-custom" width="400" height="300"/>
                    <div class="card-body" style="height:6em">
                        <h5 class="mb-3" @product.ProductName></h5>
                    </div>

                    <div class="card-body">
                        <span class="card-text">@product.ProductName</span>
                        <br /><br />
                        <span class="card-text">$@product.ProductPrice.ToString()</span>
                         <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.id" class="btn btn-primary float-right">Add to cart</a>
                    </div> 
                    
                </a>
                
             </div>
        </div>
    }
</div>
