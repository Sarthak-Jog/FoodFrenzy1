@model FoodFrenzy1.Models.Order

<h1>Thank you for your order!</h1>

<h5 class="mt-5">Order Id: @Model.Id</h5>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Food</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                var itemTotal = item.Product.ProductPrice * item.Quantity;
                <tr>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id"><img src="@item.Product.ProductPicture" style="height: 4em"></a>
                    </td>
                    <td>
                        <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.Id">@item.Product.ProductName</a>
                    </td>
                    <td>
                        @itemTotal.ToString()
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
                <td></td>
               <td class="text-right">
                    <strong>Total:</strong>
                </td>
               <td>
                 <strong>@Model?.OrderTotal.ToString()</strong>
                </td>
                <td></td>
         </tfoot>
    </table>